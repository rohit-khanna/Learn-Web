{
  "name": "sabka-bazaar",
  "version": "1.0.0",
  "description": "This is the Sample Shopping Site with Mocked Server.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start-server": "canned -p 5000 ./server",
    "build": "webpack --watch",
    "build-css": "sass ./app/css/sass/main.scss --watch ./app/index.css",
    "start-dev": "concurrently --kill-others \"npm run start-server\" \"npm run build\" \"npm run build-css\" \"live-server\"",
    "dev": "start npm run start-server && start npm run build && start npm run build-css"
  },
  "author": "Rohit Khanna",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/runtime": "^7.2.0",
    "babel-loader": "^8.0.4",
    "canned": "^0.3.12",
    "clean-webpack-plugin": "^1.0.0",
    "css-loader": "^2.0.1",
    "html-webpack-plugin": "^3.2.0",
    "node-fetch": "^2.3.0",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.28.0",
    "webpack-cli": "^3.1.2"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "live-server": "^1.2.1"
  }
}
